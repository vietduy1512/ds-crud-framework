@using SEP.Framework.Seedwork.Identity;

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Admin" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Post")" method="post" id="logoutForm" class="ml-auto navbar-right">
        <div class="user-area dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" title="User: @UserManager.GetUserName(User)">
                <img class="user-avatar rounded-circle" src="~/images/blog-img/user-avatar.jpg" alt="User Avatar">
            </a>
            <div class="user-menu dropdown-menu" aria-labelledby="dropdownMenuButton">
                <h6 class="dropdown-header">User: @UserManager.GetUserName(User)</h6>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item" title="" asp-controller="Manage" asp-action="PostManage">Manage</a>
                <a class="dropdown-item" asp-area="Admin" asp-page="/Account/Manage/Index" title="Change your profile or password">My Account</a>
                <button type="submit" class="btn btn-link dropdown-item">Logout</button>
            </div>
        </div>
    </form>
}
else
{
    <ul class="nav navbar-nav ml-auto navbar-right">
        <li class="nav-item">
            <a class="nav-link" asp-area="Admin" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-area="Admin" asp-page="/Account/Login">Login</a>
        </li>
    </ul>
}