@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<!doctype html>
<!--[if lt IE 7]>      <html class="no-js lt-ie9 lt-ie8 lt-ie7" lang=""> <![endif]-->
<!--[if IE 7]>         <html class="no-js lt-ie9 lt-ie8" lang=""> <![endif]-->
<!--[if IE 8]>         <html class="no-js lt-ie9" lang=""> <![endif]-->
<!--[if gt IE 8]><!-->
<html class="no-js" lang="">
<!--<![endif]-->
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Manage - @ViewData["Title"]</title>
    <meta name="description" content="Manage">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="apple-touch-icon" href="apple-icon.png">
    <link rel="shortcut icon" href="favicon.ico">
    <link rel="stylesheet" href="~/lib/admin-assets/css/normalize.css">
    <link rel="stylesheet" href="~/lib/admin-assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/lib/admin-assets/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/lib/admin-assets/css/themify-icons.css">
    <link rel="stylesheet" href="~/lib/admin-assets/css/flag-icon.min.css">
    <link rel="stylesheet" href="~/lib/admin-assets/css/cs-skin-elastic.css">
    <link rel="stylesheet" href="~/lib/admin-assets/css/lib/datatable/dataTables.bootstrap.min.css">
    <!-- <link rel="stylesheet" href="~/lib/admin-assets/css/bootstrap-select.less"> -->
    <link rel="stylesheet" href="~/lib/admin-assets/scss/style.css">
    <link rel="stylesheet" href="~/lib/admin-assets/css/custom.css" />
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,600,700,800' rel='stylesheet' type='text/css'>
    <!-- <script type="text/javascript" src="https://cdn.jsdelivr.net/html5shiv/3.7.3/html5shiv.min.js"></script> -->
</head>
<body>
    <partial name="_LeftPanel"></partial>

    <!-- Right Panel -->
    <div id="right-panel" class="right-panel">
        <!-- Header-->
        <header id="header" class="header">
            <div class="header-menu">
                <div class="col-sm-7">
                    <a id="menuToggle" class="menutoggle pull-left"><i class="fa fa fa-tasks"></i></a>
                    <div class="header-left">
                        <button class="search-trigger"><i class="fa fa-search"></i></button>
                        <div class="form-inline">
                            <form class="search-form">
                                <input class="form-control mr-sm-2" type="text" placeholder="Search ..." aria-label="Search">
                                <button class="search-close" type="submit"><i class="fa fa-close"></i></button>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-sm-5">
                    <div class="user-area dropdown float-right">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" title="User: @UserManager.GetUserName(User)">
                            <img class="user-avatar rounded-circle" src="~/images/blog-img/user-avatar.jpg" alt="User Avatar">
                        </a>
                        <div class="user-menu dropdown-menu">
                            <h6 class="dropdown-header">User: @UserManager.GetUserName(User)</h6>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" title="Home page" asp-controller="Post" asp-action="Index">Home</a>
                            <a class="dropdown-item" asp-area="Admin" asp-page="/Account/Manage/Index" title="Change your profile or password">My Account</a>
                            <form asp-area="Admin" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Post")" method="post" id="logoutForm">
                                <button type="submit" class="btn btn-link dropdown-item text-left">Logout</button>
                            </form>
                        </div>
                    </div>
                    <div class="language-select dropdown" id="language-select">
                        <a class="dropdown-toggle" href="#" data-toggle="dropdown" id="language" aria-haspopup="true" aria-expanded="true">
                            <i class="flag-icon flag-icon-us"></i>
                        </a>
                        <div class="dropdown-menu" aria-labelledby="language">
                            <div class="dropdown-item">
                                <span class="flag-icon flag-icon-fr"></span>
                            </div>
                            <div class="dropdown-item">
                                <i class="flag-icon flag-icon-es"></i>
                            </div>
                            <div class="dropdown-item">
                                <i class="flag-icon flag-icon-us"></i>
                            </div>
                            <div class="dropdown-item">
                                <i class="flag-icon flag-icon-it"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </header><!-- /header -->
        <!-- Header-->

        @RenderBody()

    </div><!-- /#right-panel -->
    <!-- Right Panel -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/admin-assets/js/vendor/jquery-2.1.4.min.js"></script>
    <script src="~/lib/admin-assets/js/popper.min.js"></script>
    <script src="~/lib/admin-assets/js/plugins.js"></script>
    <script src="~/lib/admin-assets/js/main.js"></script>

    <script src="~/lib/admin-assets/js/data-table/datatables.min.js"></script>
    <script src="~/lib/admin-assets/js/data-table/dataTables.bootstrap.min.js"></script>
    <script src="~/lib/admin-assets/js/data-table/dataTables.buttons.min.js"></script>
    <script src="~/lib/admin-assets/js/data-table/buttons.bootstrap.min.js"></script>
    <script src="~/lib/admin-assets/js/data-table/jszip.min.js"></script>
    <script src="~/lib/admin-assets/js/data-table/pdfmake.min.js"></script>
    <script src="~/lib/admin-assets/js/data-table/vfs_fonts.js"></script>
    <script src="~/lib/admin-assets/js/data-table/buttons.html5.min.js"></script>
    <script src="~/lib/admin-assets/js/data-table/buttons.print.min.js"></script>
    <script src="~/lib/admin-assets/js/data-table/buttons.colVis.min.js"></script>
    <script src="~/lib/admin-assets/js/data-table/datatables-init.js"></script>
    <script src="~/lib/ckeditor/ckeditor.js" asp-append-version="true"></script>
    <script src="~/js/Scripts.min.js" asp-append-version="true"></script>


    <script type="text/javascript">
        $(document).ready(function () {
            $('#bootstrap-data-table-export').DataTable();
        });</script>

    @RenderSection("Scripts", required: false)
</body>
</html>
